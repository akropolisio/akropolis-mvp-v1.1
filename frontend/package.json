{
  "name": "akropolis",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/web3": "1.0.0",
    "@types/chart.js": "2.7.27",
    "bignumber": "1.1.0",
    "chart.js": "2.7.2",
    "react": "16.4.1",
    "react-chartjs-2": "2.7.2",
    "react-dom": "16.4.1",
    "react-intl": "2.4.0",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-scripts-ts": "2.16.0",
    "redux": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-promise-middleware": "5.1.1",
    "redux-thunk": "2.3.0",
    "web3": "0.18.4"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "start": "REACT_APP_STAGE=dev npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "REACT_APP_STAGE=prod npm-run-all build-css build-js",
    "test": "jest",
    "tslint": "tslint -c tslint.json --format verbose 'src/**/*.{ts,tsx}'",
    "tslint:ci": "tslint -o reports/junit/test-results.xml -c tslint.json --format junit 'src/**/*.{ts,tsx}'",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "23.1.2",
    "@types/node": "10.3.6",
    "@types/react": "16.4.4",
    "@types/react-dom": "16.0.6",
    "@types/react-intl": "2.3.8",
    "@types/react-redux": "6.0.2",
    "@types/react-router": "4.0.26",
    "@types/react-router-dom": "4.2.7",
    "@types/redux-logger": "3.0.6",
    "@types/redux-promise-middleware": "0.0.10",
    "node-sass": "4.9.0",
    "node-sass-chokidar": "1.2.2",
    "npm-run-all": "4.1.2",
    "sass-mq": "5.0.0",
    "svg-react-loader": "0.4.5",
    "tslint": "5.10.0",
    "tslint-react": "3.6.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
